import java.util.Scanner;

public class Calculator {
    static int op = 0;
    static Scanner scanner = new Scanner(System.in);
    static double num1;
    static double num2;
    static double result;

    public static void main(String[] args) {
        do {


            System.out.println("\nFor Sum press 1\nFor Subtraction press 2\nFor Multiply press 3\nFor Dividing press 4\nFor Modularity press 5");
            op = scanner.nextInt();
        } while (op < 1 && op > 5);
        if (op == 1) {
            System.out.println("What is first number? ");
            num1 = scanner.nextDouble();
            System.out.println("What is your second number ");
            num2 = scanner.nextDouble();
            result = num1 + num2;
            System.out.println("Result: " + result);
        }
        if (op == 2) {
            System.out.println("What is first number? ");
            num1 = scanner.nextDouble();
            System.out.println("What is your second number ");
            num2 = scanner.nextDouble();
            result = num1 - num2;
            System.out.println("Result: " + result);
        }
        if (op == 3) {
            System.out.println("What is first number? ");
            num1 = scanner.nextDouble();
            System.out.println("What is your second number ");
            num2 = scanner.nextDouble();
            result = num1 * num2;
            System.out.println("Result: " + result);
        }
        if (op == 4) {
            System.out.println("What is first number? ");
            num1 = scanner.nextDouble();
            System.out.println("What is your second number ");
            num2 = scanner.nextDouble();
            result = num1 / num2;
            System.out.println("Result: " + result);
        }
        if (op == 5) {
            System.out.println("What is first number? ");
            num1 = scanner.nextDouble();
            System.out.println("What is your second number ");
            num2 = scanner.nextDouble();
            result = num1 % num2;
            System.out.println("Result: " + result);
        }
    }

}
